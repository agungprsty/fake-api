{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.4.1"
        }
    },
    "routes": [{
            "src": "/(css|js)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "json-faker",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "@laravel_key",
        "APP_URL": "https://json-faker.vercel.app",
        "APP_TIMEZONE": "Asia/Jakarta",

        "VERCEL_DEMO_MODE": "true",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "build": {
        "env": {
            "LARAVEL_KEY": "@laravel_key"
        },
        "commands": [
            "php artisan key:generate",
            "./vendor/bin/openapi app -o public/assets/apispec.json"
        ],
        "functions": {
            "preBuild": {
                "command": "php artisan storage:link && php artisan cache:clear"
            },
            "postBuild": {
                "command": "rm -rf storage"
            }
        }
    }
}
